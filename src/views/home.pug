doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    //- link(rel="stylesheet" href="style.css")
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    style.
      .displaynone{
        display:none;
      }
      .box {
        position: relative;
      }
      .myBox {
        position: absolute;
      }
      .remoteBox {
        position: absolute;
      }
      .mirror{
        transform: scaleX(-1);
      }
  body
    header
      h1 Noom
    main
      div#welcome
        form
          input(placeholder="room name", required, type="text")
          button Enter Room
      div#call
        div#myStream
          div#control
            button#take_photo Take Photo
            select#cameras
            button#mute Mute
            button#camera Turn Camera Off
          div.box
            video#my_face(autoplay, playsinline, width="640", height="480").displaynone
            canvas#mygreen.displaynone
            div.myBox
              canvas#mytrans.mirror
            div.remoteBox
              canvas#remotetrans.mirror
        div#streams
          video#remote(autoplay, playsinline, width="640", height="480").displaynone
          canvas#remotegreen.displaynone
        div#photos
          canvas#photo
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")
    script(type="module" src="/public/js/remove.js")
    script(type="module" src="/public/js/remove2.js")
    script(src="https://cdn.jsdelivr.net/npm/@mediapipe/selfie_segmentation/selfie_segmentation.js" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js" crossorigin="anonymous")
    script(src="https://mrdoob.github.io/stats.js/build/stats.min.js")