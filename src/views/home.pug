doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body
    header
      h1 Noom
    main
      div#welcome
        form
          input(placeholder="room name", required, type="text")
          button Enter Room
      div#call
        div#myStream
          div#control
            button#take_photo Take Photo
            select#cameras
            button#mute Mute
            button#camera Turn Camera Off
          video#my_face(autoplay, playsinline, width="600", height="400")
        div#streams
        h3 Result of the last photo
        div#photos
          canvas#photo
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")